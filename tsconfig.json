{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "screens/*": ["src/screens/*"],
      "components/*": ["src/components/*"],
      "routers/*": ["src/routers/*"],
      "assets/*": ["src/assets/*"],
      "interfaces/*": ["src/interfaces/*"],
      "services/*": ["src/services/*"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "styles/*": ["src/styles/*"],
      "constants/*": ["src/constants/*"]
    }
  }
}
